{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Appearance Feature Schema",
  "description": "Defines the structure for theme settings and actions.",
  "type": "object",
  "properties": {
    "theme": {
      "type": "object",
      "properties": {
        "mode": { "enum": ["system", "light", "dark"] },
        "accent": { "type": "string", "format": "color" },
        "radius": { "type": "integer", "minimum": 0, "maximum": 16 },
        "density": { "enum": ["compact", "comfortable", "cozy"] },
        "fontScale": { "type": "number", "minimum": 0.9, "maximum": 1.1 },
        "reducedMotion": { "type": "boolean" },
        "boardBackground": { "enum": ["none", "dots", "grid", "noise", "nebula"] }
      },
      "required": ["mode", "accent", "radius", "density", "fontScale", "reducedMotion", "boardBackground"]
    }
  },
  "actions": {
    "updateTheme": {
      "description": "Applies partial updates to the current theme.",
      "params": [{ "$ref": "#/properties/theme" }]
    },
    "resetTheme": {
      "description": "Resets the theme to its default values."
    },
    "exportTheme": {
      "description": "Exports the current theme settings to a .mbtheme file."
    },
    "importTheme": {
      "description": "Imports a theme from a user-selected .mbtheme file."
    }
  }
}
